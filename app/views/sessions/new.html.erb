<div class="auth-container">
  <% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
  <% end %>
  <div class="auth-form">
    <h1>Log In</h1>
    <%= form_with url: login_path do |f| %>
      <%= f.label :email %><br>
      <%= f.email_field :email %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password %><br>

      <%= f.submit "Log in", class: "button login" %>
    <% end %>
  </div>
    <p>Don't have an account? <strong><%= link_to 'Sign Up', signup_path, class: "link-inverse" %></strong></p>
</div>